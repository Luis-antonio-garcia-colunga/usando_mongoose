{{>header}}

<div >
     <center>
    <h1>Pintores</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Nombre</td>
                <td>Nacionalidad</td>
                <td>Corriente</td>
                <td>Imagen</td>
            </tr>
        </thead>
        <tbody>
        {{#each pintores}}
            <tr>
                <td>{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{nacionalidad}}</td>
                <td>{{corriente}}</td>0
                <td><img width="25%" src="../images/{{pintura}}"></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    </center>
    {{else}}
    <div>No hay pinches pintores</div>
    {{/if}}
</div>

{{>footer}}
